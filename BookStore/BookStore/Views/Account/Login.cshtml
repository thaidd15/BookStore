@model BookStore.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Đăng nhập</h3>
    </div>
    <div class="panel-body">
        <p class="lead">Đăng nhập để thực hiện quyền quản trị</p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(n => n.Username, new { @class = "form-control", @placeholder = "Username" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(n => n.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>
            <input type="submit" class="btn btn-success" value="Đăng nhập" />
        }
    </div>
</div>